<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/year_tv"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/black"
        android:textSize="12pt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/year_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintBottom_toTopOf="@id/description_tv"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/black"
        android:textSize="8pt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/year_tv"
        app:layout_constraintBottom_toTopOf="@id/rate_tv"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/black"
        android:textSize="8pt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rate_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_tv"
        app:layout_constraintBottom_toTopOf="@id/sb"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="8pt"/>

    <SeekBar
        android:id="@+id/sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rate_tv"
        app:layout_constraintBottom_toTopOf="@id/rate_btn"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:stepSize="1"
        android:min="1"
        android:max="5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sb"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/white"
        android:text="@string/rate"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>